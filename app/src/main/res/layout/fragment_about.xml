<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_400dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@mipmap/about_header3">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_150dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/launch_pic"
            app:border_color="@color/grey_medium_dark"
            app:border_width="@dimen/dimen_2sp"
            app:border_overlay="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:textColor="@color/grey_medium_dark"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_10dp"
            android:textSize="@dimen/dimen_32sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_20dp"
        android:text="应用介绍与帮助"
        android:textSize="@dimen/dimen_40sp"
        android:textColor="#ff0000" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/dimen_10dp"
        app:cardElevation="@dimen/dimen_10dp">

        <TextView
            android:id="@+id/tv_app_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_description"
            android:textColor="@color/text_color"
            android:textSize="@dimen/dimen_30sp"
            android:layout_margin="@dimen/dimen_40dp"
            android:lineSpacingExtra="@dimen/dimen_30sp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>